            AmazonId = "0786838655"
        },
        new Book {
            Title = "A Walk in the Woods",
            Author = "Bill Bryson",
            Image = "AWalkintheWoods.jpg",
            Category = "nature",
            Description = "Stories of exploration and discovery in the highest mountains.",
            AmazonId = "0767902521"
        }
    };

    <!-- Category Feature -->
    private string CurrentCategory = "all";
    private string CurrentView = "grid";

    private IEnumerable<Book> FilteredBooks =>
        CurrentCategory switch
        {
            "all" => Books,
            "favorites" => Books.Where(b => b.Favorite),
            _ => Books.Where(b => b.Category == CurrentCategory)
        };

    private void SetCategory(string category)
    {
        CurrentCategory = category;
    }

    private void SetView(string view)
    {
        CurrentView = view;
    }
}